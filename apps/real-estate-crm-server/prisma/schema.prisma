datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Property {
  id            String        @id @default(cuid())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  address       String?
  price         Float?
  bedrooms      Int?
  bathrooms     Int?
  squareFootage Float?
  description   String?
  available     Boolean?
  appointments  Appointment[]
}

model Client {
  id           String        @id @default(cuid())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  firstName    String?
  email        String?
  address      String?
  dateOfBirth  DateTime?
  lastName     String?
  phoneNumber  String?
  appointments Appointment[]
}

model Appointment {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  time       DateTime?
  notes      String?
  date       DateTime?
  agent      String?
  property   Property? @relation(fields: [propertyId], references: [id])
  propertyId String?
  client     Client?   @relation(fields: [clientId], references: [id])
  clientId   String?
}
